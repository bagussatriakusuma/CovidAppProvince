<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.captain_miao.optroundcardview.OptRoundCardView
        android:layout_width="match_parent"
        android:layout_height="500px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_daerah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daerah"
                android:textSize="20sp"
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_jumlahKasus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jumlah kasus"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_daerah"
                app:layout_constraintTop_toBottomOf="@+id/tv_daerah" />

            <TextView
                android:id="@+id/tv_jumlahSembuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jumlah sembuh"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_daerah"
                app:layout_constraintTop_toBottomOf="@+id/tv_jumlahKasus" />

            <TextView
                android:id="@+id/tv_jumlahMeninggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jumlah meninggal"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_daerah"
                app:layout_constraintTop_toBottomOf="@+id/tv_jumlahSembuh" />

            <TextView
                android:id="@+id/tv_jumlahDirawat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jumlah dirawat"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_daerah"
                app:layout_constraintTop_toBottomOf="@+id/tv_jumlahMeninggal" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.github.captain_miao.optroundcardview.OptRoundCardView>



</androidx.constraintlayout.widget.ConstraintLayout>